## Student Login window 
<StudentLogin>:
    ##Name of window to refer to the buttons
    name: 'studentlogin'

    ## For 'Show Password' function
    textinput: password
    #username: username
    password: password
    
    FloatLayout:


        size: root.width,root.height
            
        RoundedButton:
            markup: True
            text: '[font=times]Back[/font]'
            font_size: 25
            size_hint:(0.13,0.08)
            pos_hint:{'x':0.82, 'y':0.85}
            on_press: print('Back')
            on_release:
                app.root.current = 'titlemenu'
                root.manager.transition.direction='left'

        RoundedButton:
            markup: True
            text: '[font=times]Login[/font]'
            font_size: 25
            size_hint: (0.15,0.1)
            pos_hint:{'x':0.68, 'y':0.25}
            on_press: print('studentmenu')
            on_release:
                app.root.current= 'studentmainmenu'
                root.manager.transition.direction='right'

        Label:
            markup: True
            text: 'Show Password'
            font_size: 20
            outline_color: (0,0,1)
            outline_width: 1
            pos_hint: {'x':0.16, 'y':-0.05}

        CheckBox:
            id: showpassword
            on_press: root.showpassword()
            size_hint: (0.2,0.2)
            pos_hint: {'x':0.485, 'y':0.35}

  
                    
        Label:
            id: welcomestudentlogin
            markup: True
            text: 'Welcome Student!'
            bold: True
            outline_color: (0,0,0)
            outline_width: 2
            font_size: 50
            pos_hint:{'x':0, 'y':0.4}
            color: (1,1,1)

        Label:
            markup: True
            text: 'Username:'
            outline_color: (0,0,1)
            outline_width: 1
            font_size: 25
            pos_hint:{'x':-0.22, 'y':0.11}
            color: (1,1,1)

        Label:
            markup: True
            text: 'Enter your username and password'
            outline_color: (0,0,1)
            outline_width: 1
            font_size: 30
            pos_hint:{'x':0, 'y':0.25}
            color: (1,1,1)

        Label:
            markup: True
            text: 'Password:'
            outline_color: (0,0,1)
            outline_width: 1
            font_size: 25
            pos_hint:{'x':-0.22, 'y':0.01}
            color: (1,1,1)

        TextInput:
            multiline: False
            size_hint: (0.4,0.06)
            pos_hint: {'x':0.34,'y':0.58}
            font_size: 20
    
        TextInput:
            id: password
            multiline: False
            size_hint: (0.4,0.06)
            pos_hint: {'x':0.34,'y':0.48}
            font_size:20
            password: True

        Label:
            id: output_label
            text:''

