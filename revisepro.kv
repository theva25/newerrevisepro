##All the windows in my program
WindowManager:                            
    TitleMenu:
    StudentLogin:
    StudentRegister:
    StudentMainMenu:
    Biology:
    Chemistry:

##Common Button atributes
<Button>
    ##Size of each button and its text colour
    size_hint:(0.2,0.1)
    color: (0,0,0)
##    background_color: (68/255, 255/255, 255/255)


#:import Factory kivy.factory.Factory

<MyPopup@Popup>
    auto_dismiss: False
    title: 'Do you wish to log out ?'
    size_hint:(0.4,0.6)

    BoxLayout:
        Button:
            on_release:
                app.root.current = 'titlemenu'
                root.dismiss()
            text:'Log Out'

        Button:
            on_release:
                app.root.current= 'studentmainmenu'
                root.dismiss()
            text:'Go Back'
            


##The rounder shape of the rectangle buttons
<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal:''
    canvas.before:
##        Color:
##            rgba:(0,0,0,0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            ##determine how round the buttons are gonna be
            radius: [18]

## Title Menu window    
<TitleMenu>:

    ##Name of each window to refer to buttons 
    name: 'titlemenu'

    FloatLayout:

        size: root.width,root.height
            
        RoundedButton: 
            markup: True
            text: '[font=times]Student Login[/font]'
            font_size: 20
            pos_hint:{'x':0.4, 'y':0.5}
            ##Giving Button functions
            on_press: print('Student Login!')
            on_release:
                app.root.current = 'studentlogin'
                root.manager.transition.direction= 'right'
            
        RoundedButton:
            markup: True
            text: '[font=times]Student Register[/font]'
            font_size: 20
            pos_hint:{'x':0.4, 'y':0.3}
